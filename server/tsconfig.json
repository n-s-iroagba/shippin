{
  "compilerOptions": {
    "target": "ES2020",                     // modern JS target
    "module": "commonjs",                   // for Node.js
    "strict": true,                        // enable all strict type-checking options
    "esModuleInterop": true,               // allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                  // skip checking declaration files for faster build
    "outDir": "./dist",                    // output compiled files here
    "baseUrl": "./src",                    // base directory for module resolution
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "express", "express-session"], // include typings for node, express, and session
    "typeRoots": ["./node_modules/@types", "./src/types"]  // add your own types directory (optional)
  },
"include": [
  "**/*.ts",
  "**/*.d.ts"
],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
